        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white<!--?attr/colorPrimaryVariant--></item>
        <!-- Customize your theme here. -->
                <item name="android:windowTranslucentStatus">true</item>
